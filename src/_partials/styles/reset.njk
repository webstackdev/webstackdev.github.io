  *, *::before, *::after {
    box-sizing: border-box;
  }

  * {
    margin: 0;
  }

  html, body {
    height: 100%;
  }

  body {
    background-color: grey;
    font-family: sans-serif;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
  }

  svg {
    display: block;
    max-width: 100%;
  }

  input, button, textarea, select {
    font: inherit;
  }

  button {
    background: none;
    color: inherit;
    border: none;
    padding: 0;
    font: inherit;
    cursor: pointer;
    outline: inherit;
  }

  p, h1, h2, h3 {
    overflow-wrap: break-word;
  }