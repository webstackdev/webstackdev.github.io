<h2>EXPERIENCE</h2>
<hr class="sectionHr">
{%- for experienceItem in collections.experienceSection -%}
<div
  id="experienceItem-{{ experienceItem.data.order }}"
  class="mainItem"
  itemprop="{{ experienceItem | getJobItemProp }}"
  itemscope
   itemref="resumeSubject"
  itemtype="http://schema.org/Organization"
>
  <h3
    id="role-{{ experienceItem.data.order }}"
    itemprop="Role"
    itemref="experienceItem-{{ experienceItem.data.order }}"
    itemscope
    itemtype="https://schema.org/EmployeeRole"
  >
    <span itemprop="roleName">{{ experienceItem.data.jobTitle }}</span>
  </h3>
  <div class="mainDetailName" itemprop="legalName">
    {{ experienceItem.data.employerName }}
  </div>
  <div class="mainDetails">
    <span
      class="mainDetailHeader"
      itemprop="Role"
      itemscope
      itemtype="https://schema.org/EmployeeRole"
    >
      <span class="mainDetailIcon">{% include 'icons/icon-calendar.njk' %}</span>
      <span class="mainDetailText">
        <span
          itemprop="startDate"
          itemtype="http://schema.org/startDate"
          content="{{ experienceItem.data.startDate }}"
        >{{ experienceItem.data.startDate | startDateShortCode }}</span> - <span
          itemprop="endDate"
          itemtype="http://schema.org/endDate"
          content="{{ experienceItem.data.endDate }}"
        >{{ experienceItem.data.endDate | endDateShortCode }}</span>
      </span>
    </span>
    <a
      class="detailLocationAnchor"
      href="{{ experienceItem.locationMap }}"
      itemprop="location"
      itemscope
      itemtype="http://schema.org/PostalAddress"
    >
      <span class="mainDetailIcon">{% include 'icons/icon-location.njk' %}</span>
      <span class="mainDetailText">
        <span itemprop="addressLocality">{{ experienceItem.data.employerCity }}</span>, <span itemprop="addressRegion">{{ experienceItem.data.employerState }}</span>
      </span>
    </a>
  </div>
  <div class="mainDetailContent experienceDetailContent" itemprop="description">
    {{ experienceItem.content | safe }}
  </div>
</div>
{%- endfor -%}